<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with blue color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#14448C" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Overlay with semi-transparent white color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#25FFFFFF" /> <!-- 40% opacity white color -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>
